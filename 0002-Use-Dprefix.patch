Subject: [PATCH] Use -Dprefix

---
 lib/CPANPLUS/Dist/Deb/Constants.pm |   12 ++++++------
 1 files changed, 6 insertions(+), 6 deletions(-)

diff --git a/lib/CPANPLUS/Dist/Deb/Constants.pm b/lib/CPANPLUS/Dist/Deb/Constants.pm
index 1c2584a..5679d09 100755
--- a/lib/CPANPLUS/Dist/Deb/Constants.pm
+++ b/lib/CPANPLUS/Dist/Deb/Constants.pm
@@ -401,10 +401,10 @@ install-stamp: build-stamp
 	dh_testroot
 	dh_clean -d -k
 
-	\$(MAKE) install DESTDIR=\$(TMP) PREFIX=/usr
+	\$(MAKE) install DESTDIR=\$(TMP) PREFIX=$Config{prefix}
 	@find . -type f | grep '/perllocal.pod$$' | xargs rm -f
 
-	dh_movefiles /usr
+	dh_movefiles $Config{prefix}
 
 	touch install-stamp
 
@@ -497,10 +497,10 @@ install-stamp:
 	dh_testroot
 	dh_clean -d -k
 
-	\$(MAKE) install DESTDIR=\$(TMP) PREFIX=/usr
+	\$(MAKE) install DESTDIR=\$(TMP) PREFIX=$Config{prefix}
 	-find . -type f | grep '/perllocal.pod$$' | xargs rm -f
 	
-	dh_movefiles /usr
+	dh_movefiles $Config{prefix}
 
 	touch install-stamp
 
@@ -600,7 +600,7 @@ install-stamp: build-stamp
 	# remove it for now
 	-find . -type f | grep '/.packlist$$' | xargs rm -f
 	
-	dh_movefiles /usr
+	dh_movefiles $Config{prefix}
 
 	touch install-stamp
 
@@ -701,8 +701,7 @@ install-stamp:
 	# remove it for now
 	-find . -type f | grep '/.packlist$$' | xargs rm -f
 
-	dh_movefiles /usr
+	dh_movefiles $Config{prefix}
 
 	touch install-stamp
 
